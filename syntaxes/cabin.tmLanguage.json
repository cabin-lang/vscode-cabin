{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cabin",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#classes"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cabin",
				"match": "\\b(if|variable|function|group|unique|new|return|reference|take|copy|and|or|not|is|run|represent|as)\\b"
			}]
		},
		"functions": {
			"patterns": [
				{
					"match": "\\b(\\w+)\\s*\\(",
					"captures": {
						"1": {
							"name": "entity.name.function"
						}
					}
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cabin",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cabin",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment",
				"match": "//[^\r\n]*"
			}]
		},
		"classes": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b[A-Z]\\w*"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b\\w+\\b"
			}]
		}
	},
	"scopeName": "source.cabin"
}