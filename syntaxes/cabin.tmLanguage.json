{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Cabin",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#classes"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cabin",
				"match": "\\b(either|if|its|let|function|group|new|otherwise|return|run|)\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "constant.numeric",
				"match": "\\b-?\\d+(\\.\\d+)?\\b"
			}]
		},
		"functions": {
			"patterns": [
				{
					"match": "\\b(\\w+)\\s*\\(",
					"captures": {
						"1": {
							"name": "entity.name.function"
						}
					}
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cabin",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cabin",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment",
				"match": "//[^\r\n]*"
			}]
		},
		"classes": {
			"patterns": [{
				"name": "entity.name.type",
				"match": "\\b[A-Z]\\w*"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.name",
				"match": "\\b\\w+\\b"
			}]
		}
	},
	"scopeName": "source.cabin"
}